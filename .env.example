# Variables de entorno para OmniAPI
# Copia este archivo como .env y configura tus valores reales

# Configuración básica
MONGODB_URI=mongodb://localhost:27017
DB_PASSWORD=your_db_password_here
JWT_SECRET=your_jwt_secret_key_here
ADMIN_API_KEY=your_admin_api_key_here
DEMO_SECRET=your_demo_secret_here

# Secretos para conexiones
DEMO_CONNECTOR_SECRET=your_demo_connector_secret_here
MODBUS_RTU_SECRET=your_modbus_rtu_secret_here
MQTT_CREDENTIALS=your_mqtt_credentials_here
BIOMETRIC_API_TOKEN=your_biometric_api_token_here
TEST_DUMMY_SECRET=your_test_dummy_secret_here

# MQTT Feed Connector
MQTT_FEED_SECRET=your_mqtt_feed_secret_here
MQTT_FEED_PASSWORD=your_mqtt_feed_password_here

# REST Climate Connector
WEATHER_API_SECRET=your_weather_api_secret_here
WEATHER_API_KEY=Bearer your_weather_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=omniapi
MONGODB_TIMEOUT=10s